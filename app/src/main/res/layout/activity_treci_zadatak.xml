<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Treci_zadatak"
    android:orientation="vertical"
    android:background="@drawable/prvii">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3.zadatak"
        android:textSize="20dp"
        app:fontFamily="@font/alice"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000000"
        app:fontFamily="@font/alice"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:text="Povežite boje s nazivom upisujući redni broj boje na praznu liniju:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/broj1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  1."
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold" />



        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            app:srcCompat="@drawable/zuta_boja" />

        <TextView
            android:id="@+id/txtCrvena"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="CRVENA BOJA "
            android:textSize="20dp"
            android:textColor="#000000"
            app:fontFamily="@font/alice"
            android:textStyle="bold"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/edt1"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0"
            android:maxLength="1"
            android:inputType="number"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/broj2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  2."
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            app:srcCompat="@drawable/crvena_boja" />

        <TextView
            android:id="@+id/txtZuta"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="ŽUTA BOJA "
            android:textSize="20dp"
            android:textColor="#000000"
            app:fontFamily="@font/alice"
            android:textStyle="bold"
            android:gravity="center" />

        <EditText
            android:id="@+id/edt2"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:inputType="number"
            android:maxLength="1"
            android:textStyle="bold"
            android:layout_marginRight="20dp"/>




</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/broj3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  3."
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            app:srcCompat="@drawable/plava_boja" />

        <TextView
            android:id="@+id/txtZelena"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="ZELENA BOJA"
            android:textSize="20dp"
            android:textColor="#000000"
            app:fontFamily="@font/alice"
            android:textStyle="bold"
            android:gravity="center" />

        <EditText
            android:id="@+id/edt3"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:inputType="number"
            android:textStyle="bold"
            android:maxLength="1"
            android:layout_marginRight="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/broj4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  4."
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            app:srcCompat="@drawable/zelena_boja" />


        <TextView
            android:id="@+id/txtPlava"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="PLAVA BOJA"
            android:textSize="20dp"
            android:textColor="#000000"
            app:fontFamily="@font/alice"
            android:textStyle="bold"
            android:gravity="center" />

        <EditText
            android:id="@+id/edt4"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:inputType="number"
            android:textStyle="bold"
            android:maxLength="1"
            android:layout_marginRight="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btnProvjeri"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Provjeri"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:backgroundTint="#e5ccff"
            android:background="@drawable/custom_button"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/custom_button"
            android:backgroundTint="#e5ccff"
            android:text="Dalje"
            android:layout_marginTop="14dp"
            android:textAllCaps="false"
            android:onClick="Dalje3"
            android:textSize="20dp"
            android:textStyle="italic" />
    </LinearLayout>


</LinearLayout>